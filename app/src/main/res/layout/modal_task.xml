<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tasks_modal_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tasks_modal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tasks_modal_name_label" />

    <RelativeLayout
        android:id="@+id/task_modal_layout_calendar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tasks_modal_name_label"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/task_modal_calendar_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_calendar_white"
            android:tint="@android:color/black" />

        <TextView
            android:id="@+id/task_modal_calendar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/task_modal_calendar_icon"
            android:layout_toStartOf="@+id/task_modal_calendar_clear_icon"
            android:text="@string/task.due_date"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/task_modal_calendar_clear_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_clear_white"
            android:tint="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/task_modal_layout_alert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/task_modal_layout_calendar"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/task_modal_alarm_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_alarm_white"
            android:tint="@android:color/black" />

        <TextView
            android:id="@+id/task_modal_alarm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/task_modal_alarm_icon"
            android:layout_toStartOf="@+id/task_modal_alert_clear_icon"
            android:text="@string/task.remind_me"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/task_modal_alert_clear_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_clear_white"
            android:tint="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>
